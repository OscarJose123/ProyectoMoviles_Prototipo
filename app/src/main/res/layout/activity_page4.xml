<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page4"
    android:background="@android:color/holo_green_light">

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="71dp"
        android:id="@+id/button24"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button23"
        android:layout_alignBottom="@+id/button23"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView25"
        android:text="Cuando un peaton desea salir a la vía pública ¿de quién se presume  que es la responsabilidad si se produce un accidente con un peatón u otro vehículo?"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button23"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/radioButton12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Del peatón, por no tomar la precaución al llegar a una salida de vehículos."
        android:id="@+id/radioButton10"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp"
        android:textColor="@android:color/black"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Del conductor del otro vehículo, por no tener cuidado."
        android:id="@+id/radioButton11"
        android:textColor="@android:color/black"
        android:layout_below="@+id/radioButton10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del conductor del vehículo que sale a la vía pública."
        android:id="@+id/radioButton12"
        android:textColor="@android:color/black"
        android:layout_below="@+id/radioButton11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:checked="true" />

</RelativeLayout>

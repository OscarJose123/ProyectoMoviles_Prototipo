<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page12"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="La negativa a realizar una prueba de alcoholemia ¿constituye una falta?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/textView51"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button39"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp" />

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button40"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button39"
        android:layout_alignBottom="@+id/button39"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="87dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sólo si se ha incurrido en una infracción o participado en un accidente.  "
        android:id="@+id/radioButton33"
        android:checked="false"
        android:layout_below="@+id/textView51"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textColor="@android:color/black" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nunca"
        android:id="@+id/radioButton34"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siempre"
        android:id="@+id/radioButton35"
        android:layout_below="@+id/radioButton34"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:checked="false"
        android:textColor="@android:color/black" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Alto">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/alto"
        tools:text="Es una señal de tráfico reglamentaria que indica en las intersecciones la obligación de detenerse antes de continuar la marcha.  Su propósito es ordenar al conductor que detenga completamente su vehículo y sólo avanzar cuando elimine totalmente la posibilidad de accidente. El hecho de no respetarla puede probocar un gravísimo acidente."
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ALTO"
        android:layout_above="@+id/alto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:id="@+id/imageView20" />

</RelativeLayout>

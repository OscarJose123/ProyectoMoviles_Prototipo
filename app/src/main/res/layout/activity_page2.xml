<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page2"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="De las señales reglamentarias, identifica cual de estas señales es la incorrecta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView17"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Menu"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button21"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/button22"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Siguiente"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/button22"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView39" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/zona"
        android:id="@+id/imageView34"
        android:layout_width="90dp"
        android:layout_above="@+id/imageView38"
        android:layout_alignStart="@+id/imageView38" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ceda"
        android:id="@+id/imageView38"
        android:layout_above="@+id/imageView39"
        android:layout_alignStart="@+id/imageView39" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/velocidad2"
        android:id="@+id/imageView39"
        android:layout_above="@+id/button22"
        android:layout_toEndOf="@+id/button21"
        android:layout_marginBottom="71dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_above="@+id/imageView38"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:layout_above="@+id/imageView39"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:layout_alignBottom="@+id/imageView39"
        android:layout_alignParentStart="true"
        android:checked="true" />

</RelativeLayout>

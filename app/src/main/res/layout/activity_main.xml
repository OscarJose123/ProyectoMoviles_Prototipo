<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.MainActivity"
    android:background="@android:color/holo_blue_bright">

    <Button
        android:background="@drawable/manual"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="1dp"
        android:paddingTop="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/btnManual" />

    <Button
        android:id="@+id/btnJuega"
        android:background="@drawable/juega"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_above="@+id/btnExamen"
        android:layout_alignStart="@+id/btnExamen"
        android:layout_marginBottom="17dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/examen"
        android:id="@+id/btnExamen"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnManual"
        android:layout_alignStart="@+id/btnManual" />

    <ImageView
        android:layout_width="400dp"
        android:id="@+id/imageView"
        android:background="@android:color/holo_blue_bright"
        android:src="@drawable/icono"
        android:layout_height="240dp"
        android:layout_above="@+id/btnJuega"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>

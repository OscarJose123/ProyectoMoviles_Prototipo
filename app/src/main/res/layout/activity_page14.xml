<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page14"
    android:background="@android:color/holo_green_light">

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:id="@+id/button43"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/button44"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button44"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Que pasaria si el conductor no posee los documentos necesarios?"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multa de 1000 Córdobas"
        android:id="@+id/radioButton39"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehiculo Embargado"
        android:id="@+id/radioButton40"
        android:layout_below="@+id/radioButton39"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:textColor="@android:color/black"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arresto Inmediato"
        android:id="@+id/radioButton41"
        android:layout_below="@+id/radioButton40"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:checked="true" />
</RelativeLayout>

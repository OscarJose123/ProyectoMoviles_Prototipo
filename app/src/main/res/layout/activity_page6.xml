<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page6"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="¿Cual de las siguientes señales tiene como funcion avisar de que punto la via esta en direccion contraria?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView34"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark" />

    <ImageView
        app:srcCompat="@drawable/contramano"
        android:id="@+id/imageView35"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView34"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/proximidad_de_semaforo"
        android:id="@+id/imageView36"
        android:layout_below="@+id/imageView35"
        android:layout_alignStart="@+id/imageView35"
        android:layout_marginTop="31dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/prohibido_estacionar_y_detenerse"
        android:id="@+id/imageView37"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView36"
        android:layout_alignStart="@+id/imageView36" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:id="@+id/button27"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark" />

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button28"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView37"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton16"
        android:layout_alignTop="@+id/imageView35"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton17"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton18"
        android:layout_alignBottom="@+id/imageView37"
        android:layout_alignParentStart="true"
        android:checked="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarjosmoreira.prototipoaplicacion.Page5"
    android:background="@android:color/holo_green_light">

    <TextView
        android:text="¿Qué significa el término  “culposo” en materia de accidentes de tránsito? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textView26"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="34dp"
        android:id="@+id/button25"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:id="@+id/button26"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/button25"
        android:layout_alignEnd="@+id/radioButton14" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Que es responsable por actuar con intención de provocar un daño. "
        android:id="@+id/radioButton13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView26"
        android:textColor="@android:color/black" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que no estaba habilitado para conducir."
        android:id="@+id/radioButton14"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Que no obró con intención de provocar un daño.  "
        android:id="@+id/radioButton15"
        android:layout_below="@+id/radioButton14"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textColor="@android:color/black"
        android:checked="true" />

</RelativeLayout>
